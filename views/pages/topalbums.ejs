<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.ejs") %>
    <title>Full Stack Project 02 - Top Albums</title>
</head>
<body>
    <div>
        <%- include("../partials/navigation.ejs") %>
    </div>
    <div class="container-bg">
        <div class="container">
            <h1>Top Albums - <%= posts.topalbums["@attr"].artist %></h1>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Album Cover</th>
                        <th>Album Name</th>
                        <th>Total Playcount</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.topalbums.album.forEach(function(post){ %>
                    <tr>
                        <td><a href=<%= post.url %>><img src= <%= post.image[1]["#text"] %> alt="cover art"></a></td>
                        <td><%= post.name %></td>
                        <td><%= post.playcount %></td>
                    </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
    </div>
    <footer>
        <%- include("../partials/footer.ejs") %>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>